<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chrislxj.nhgpapp" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Holo.Light.DarkActionBar" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Steps"
            android:label="@string/title_activity_steps" >
        </activity>
        <activity
            android:name=".Distance"
            android:label="@string/title_activity_distance" >
        </activity>
        <activity
            android:name=".Calories"
            android:label="@string/title_activity_calories" >
        </activity>
        <activity
            android:name=".BloodGlucose"
            android:label="@string/title_activity_blood_glucose" >
        </activity>
        <activity
            android:name=".BloodPressure"
            android:label="@string/title_activity_blood_pressure" >
        </activity>
        <activity
            android:name=".Pill"
            android:label="@string/title_activity_pill" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
    </application>

</manifest>
