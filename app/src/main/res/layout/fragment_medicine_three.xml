<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/bar_1"
        android:rotation="270"
        android:progressDrawable="@drawable/pill_bar_blue"
        android:layout_width="160dip"
        android:layout_height="80dip"
        android:indeterminateOnly="false"
        android:max="100"
        android:onClick="openPillActivity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dip" />
    <ProgressBar
        android:id="@+id/bar_2"
        android:rotation="270"
        android:progressDrawable="@drawable/pill_bar_green"
        android:layout_width="160dip"
        android:layout_height="80dip"
        android:indeterminateOnly="false"
        android:max="100"
        android:onClick="openPillActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="85dip"
        android:layout_marginLeft="20dip"/>
    <ProgressBar
        android:id="@+id/bar_3"
        android:rotation="270"
        android:progressDrawable="@drawable/pill_bar_yellow"
        android:layout_width="160dip"
        android:layout_height="80dip"
        android:indeterminateOnly="false"
        android:max="100"
        android:onClick="openPillActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="85dip"
        android:layout_marginRight="10dip"/>
    <TextView
        android:id="@+id/bar_1_tv"
        android:textSize="@dimen/medicine_fragment_pill_text_size"
        android:textStyle="bold"
        android:rotation="270"
        android:gravity="center"
        android:layout_alignLeft="@id/bar_1"
        android:layout_alignTop="@id/bar_1"
        android:layout_alignRight="@id/bar_1"
        android:layout_alignBottom="@id/bar_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/bar_2_tv"
        android:textSize="@dimen/medicine_fragment_pill_text_size"
        android:textStyle="bold"
        android:rotation="270"
        android:gravity="center"
        android:layout_alignLeft="@id/bar_2"
        android:layout_alignTop="@id/bar_2"
        android:layout_alignRight="@id/bar_2"
        android:layout_alignBottom="@id/bar_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/bar_3_tv"
        android:textSize="@dimen/medicine_fragment_pill_text_size"
        android:textStyle="bold"
        android:rotation="270"
        android:gravity="center"
        android:layout_alignLeft="@id/bar_3"
        android:layout_alignTop="@id/bar_3"
        android:layout_alignRight="@id/bar_3"
        android:layout_alignBottom="@id/bar_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>