<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chrislxj.nhgpapp.Login">

    <EditText
        android:id="@+id/nric_input_textbox"
        android:hint="Your NRIC No."
        android:textSize="30dip"
        android:layout_width="250dip"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dip"
        android:drawableLeft="@drawable/nric_input_drawable"/>

    <EditText
        android:id="@+id/hp_input_textbox"
        android:hint="Your HP No."
        android:textSize="30dip"
        android:layout_width="250dip"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nric_input_textbox"
        android:layout_marginTop="25dip"
        android:drawableLeft="@drawable/hp_input_drawable"/>
    <Button
        android:text="Login"
        android:textSize="30dip"
        android:layout_width="180dip"
        android:layout_height="70dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:layout_below="@id/hp_input_textbox"
        android:onClick="signInToServer"/>
    <EditText
        android:text="184985"
        android:textSize="30dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="140dip"
        android:layout_height="50dip"
        android:layout_marginBottom="15dip"/>


</RelativeLayout>
